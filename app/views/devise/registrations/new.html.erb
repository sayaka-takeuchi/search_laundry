<div class="form-wrap">
  <h2>新規登録</h2>
  <%= form_with model: @user, url:user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, 'ニックネーム' %>
      <span class="indispensable">必須</span><br />
      <%= f.text_field :nickname, autofocus: true, class: 'info-text', placeholder:'例)ランドリー太郎' %>
    </div>

    <div class="field">
      <%= f.label :email, 'メールアドレス' %>
      <span class="indispensable">必須</span><br />
      <%= f.email_field :email, class: 'info-text', placeholder: '携帯、PCどちらでも可能' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード(半角英数字混合６文字以上)' %>
      <span class="indispensable">必須</span><br />
      <%= f.password_field :password, class: 'info-text', placeholder: '半角英数字混合６文字以上' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'パスワード（確認用）'%>
      <span class="indispensable">必須</span><br />
      <%= f.password_field :password_confirmation, class: 'info-text', placeholder: '同じパスワードを入力' %>
    </div>
    <div class="form-group">
      <div class="form-info">
        <h2>
          本人確認
        </h2>
        <p class='form-info-text'>
          安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。<br>
          他のお客さまに公開されることはありません。
        </p>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='field'>
        <%= f.text_field :first_name, class:"input-name", placeholder:"例) 山田" %>
        <%= f.text_field :last_name, class:"input-name", placeholder:"例) 陸太郎" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前カナ(全角)</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='field'>
        <%= f.text_field :first_name_kana, class:"input-name", placeholder:"例) ヤマダ" %>
        <%= f.text_field :last_name_kana, class:"input-name", placeholder:"例) リクタロウ" %>
      </div>
    </div>
    <%= f.submit "登録する", class: 'actions' %>
  <% end %>
</div>


