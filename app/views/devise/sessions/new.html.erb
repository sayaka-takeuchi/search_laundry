<div class="form-wrap">
  <h2>ログイン</h2>
  <%# ログイン情報表示 %>
  <button type=button id="info-btn" >
    ログイン情報(ポートフォリオ操作用)
  </button>  
  <div class="login-info" id="js-login-info">
    <p>[管理者(全ての機能を利用可能)]<br>アドレス：test@com <br>パスワード：aaaa1111</p>
    <p>[ユーザー(口コミ投稿機能可能)]<br>アドレス：sample@com <br>パスワード：bbbb2222</p>
  </div>

  <%= form_with model: @user, url:user_session_path, local: true do |f| %>
  <div class="login-flash-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, class: 'info-text' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード' %><br />
      <%= f.password_field :password, class: 'info-text' %>
    </div>

    <%= f.submit "ログインする", class: 'actions' %>
  <% end %>
  <div class="test-login mb-4">
    <p>ゲストログイン</p>
    <%= link_to '閲覧用', users_guest_sign_in_path, method: :post, class: "test-user" %> |
    <%= link_to '管理者用', users_admin_sign_in_path, method: :post, class: "test-admin" %>
  </div>
  <p>新規登録をしていない方は
    <%= link_to 'こちら', new_user_registration_path, class: "send-sign-up" %>
    へ
  </P>
</div>
<%= javascript_pack_tag 'login' %>

