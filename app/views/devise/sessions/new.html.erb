<div class="form-wrap">
  <h2>ログイン</h2>
  <%= form_with model: @user, url:user_session_path, local: true do |f| %>
  <div class="login-flash-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, class: 'info-text', placeholder: '携帯、PCどちらでも可能' %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード' %><br />
      <%= f.password_field :password, class: 'info-text', placeholder: '半角英数字混合６文字以上' %>
    </div>

    <%= f.submit "ログインする", class: 'actions' %>
  <% end %>
  <div class="test-login mb-4">
    <p>ゲストログイン</p>
    <%= link_to '閲覧用', users_guest_sign_in_path, method: :post, class: "test-user" %> |
    <%= link_to '管理者用', users_admin_sign_in_path, method: :post, class: "test-admin" %>
  </div>
  <p class="send-registration">新規登録をしていない方は
    <%= link_to 'こちら', new_user_registration_path, class: "send-sign-up" %>
    へ
  </P>
</div>